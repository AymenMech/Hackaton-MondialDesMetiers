{% extends ":Back:layout.html.twig" %}

{% block main %}
    <section class="container-fluid">
        <div class="container">
            <h1 class="back-title">Statistiques d'utilisation de l'application par sexe.</h1>
        </div>
    </section>

    <section class="container-fluid">
        <div class="container">
            <h2>Classement des 20 domaines les plus répondus par Femme</h2>
            <hr class="back-hr">
        </div>
        <div class="col-xs-6">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Domaines</th>
                    <th>Nombre de réponses</th>
                </tr>
                </thead>
                {% for domGenderFs in domGenderF %}
                    <tr>
                        <td>{{ domGenderFs.domain }}</td>
                        <td>{{ domGenderFs.total }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </section>

    <section class="container-fluid">
        <div class="container">
            <h2>Classement des 20 domaines les plus répondus par homme</h2>
            <hr class="back-hr">
        </div>
        <div class="col-xs-6">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Domaines</th>
                    <th>Nombre de réponses</th>
                </tr>
                </thead>
                {% for domGenderHs in domGenderH %}
                    <tr>
                        <td>{{ domGenderHs.domain }}</td>
                        <td>{{ domGenderHs.total }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-xs-6 job-canvas"><canvas id="myChart"></canvas></div>
    </section>

    <section class="container-fluid">
        <div class="container">
            <h2>Classement des 20 métiers les plus tagués par Femme</h2>
            <hr class="back-hr">
        </div>
        <div class="col-xs-6">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Métier</th>
                    <th>Nombre de réponses</th>
                </tr>
                </thead>
                {% for jobGenderFs in jobGenderF %}
                    <tr>
                        <td>{{ jobGenderFs.name }}</td>
                        <td>{{ jobGenderFs.total }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </section>

    <section class="container-fluid">
        <div class="container">
            <h2>Classement des 20 métiers les plus tagués par Homme</h2>
            <hr class="back-hr">
        </div>
        <div class="col-xs-6">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Métier</th>
                    <th>Nombre de réponses</th>
                </tr>
                </thead>
                {% for jobGenderHs in jobGenderH %}
                    <tr>
                        <td>{{ jobGenderHs.name }}</td>
                        <td>{{ jobGenderHs.total }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </section>

    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: [
                    "Nombre d'utilisateurs enregistrés",
                    "Nombre d' utilisateurs actifs",
                    "Nombre d'utilisateurs pouvant participer au tirage au sort",
                    "Nombre de métiers ayant reçus des réponses",
                    "Nombre de domaines ayant reçus des réponses"
                ],
                datasets: [{
                    backgroundColor: [
                        "#2ecc71",
                        "#3498db",
                        "#95a5a6",
                        "#9b59b6",
                        "#f1c40f"
                    ],
                    {% for domGenderHs in domGenderH %}
                    data: [{{ domGenderHs.total }}]
                }]{% endfor %}
            }
        });
    </script>
    <script src="{{ asset('js/Chart.js') }}"></script>
{% endblock %}